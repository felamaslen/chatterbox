{
  "name": "chatterbox",
  "version": "0.0.1",
  "engines": {
    "node": "=8"
  },
  "description": "Internet chat application using React and Redux",
  "main": "index.js",
  "scripts": {
    "postinstall": "NODE_ENV=production BUILD_SERVER=true ./node_modules/.bin/webpack",
    "start": "NODE_ENV=production node build/index.js",
    "dev": "NODE_ENV=development BABEL_ENV=backend ./node_modules/.bin/nodemon --exec ./node_modules/.bin/babel-node -w ./api ./index.js",
    "dev:api": "NODE_ENV=development BABEL_ENV=backend CLIENT_ENV=production ./node_modules/.bin/nodemon --exec ./node_modules/.bin/babel-node --inspect -w ./api ./index.js",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --require babel-core/register \"test/**/*.spec.js\"",
    "lint": "NODE_ENV=test ./node_modules/.bin/eslint test src api webpack.config.js webpack"
  },
  "author": "Fela Maslen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felamaslen/chatterbox.git"
  },
  "bugs": {
    "url": "https://github.com/felamaslen/chatterbox/issues"
  },
  "homepage": "https://github.com/felamaslen/chatterbox#readme",
  "babel": {
    "env": {
      "production": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "ie >= 10"
                ]
              }
            }
          ],
          "stage-0"
        ]
      },
      "development": {
        "presets": [
          "react",
          "stage-0"
        ],
        "sourceMaps": "inline"
      },
      "test": {
        "presets": [
          "react",
          [
            "env",
            {
              "targets": {
                "node": "8"
              }
            }
          ],
          "stage-0"
        ]
      },
      "backend": {
        "plugins": [
          "transform-es2015-modules-commonjs",
          "transform-object-rest-spread"
        ]
      }
    }
  },
  "dependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "flux": "^3.1.3",
    "html-webpack-plugin": "^2.30.1",
    "immutable": "^3.8.2",
    "import-glob-loader": "^1.1.0",
    "joi": "^13.0.2",
    "node-sass": "^4.7.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.9",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-create-reducer": "^1.1.1",
    "redux-saga": "^0.16.0",
    "sass-loader": "^6.0.6",
    "short-unique-id": "^1.1.0",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-spritesmith": "^0.3.3",
    "winston": "^2.4.0",
    "ws": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "chai": "^4.1.2",
    "dotenv-webpack": "^1.5.4",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.1",
    "eslint-plugin-react": "^7.5.1",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "react-test-renderer": "^16.2.0",
    "redux-logger": "^3.0.6",
    "redux-saga-test-plan": "^3.3.1",
    "redux-test-utils": "^0.2.2",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-dev-server": "^2.9.4",
    "webpack-hot-middleware": "^2.21.0"
  }
}
